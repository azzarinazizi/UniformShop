<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.azzarina.uniformshop">

    <!-- Permission to access gallery when uploading image to sell !-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Permission to access internet when importing JSON URL !-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.UniformShop">
        <activity android:name=".CheckoutPage"></activity>
        <activity android:name=".OpenProduct" />
        <activity android:name=".ProductsList" />
        <activity android:name=".ListingOverview" />
        <activity android:name=".UniformGuide" />
        <activity android:name=".SellingPage" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>