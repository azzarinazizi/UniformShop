<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="#CCCBCB"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="Level"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radio_senior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingHorizontal="3dp"
                android:text="Senior" />

            <RadioButton
                android:id="@+id/radio_junior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingHorizontal="3dp"
                android:text="Junior" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#CCCBCB"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="Category"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:entries="@array/category_array"
                android:paddingHorizontal="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#CCCBCB"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="Size"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/size_spinner"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:entries="@array/size_array"
                android:paddingHorizontal="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#CCCBCB"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="Condition"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/condition_spinner"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:entries="@array/condition_array"
                android:paddingHorizontal="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="#CCCBCB"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:text="Set Price"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/setPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:ems="8"
                android:hint="$"
                android:inputType="number"
                android:paddingHorizontal="9dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="#CCCBCB"
                android:paddingHorizontal="12dp"
                android:paddingVertical="7dp"
                android:text="@string/description_text"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/extraDescription"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:ems="13"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:paddingHorizontal="9dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnSelectImage"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:background="@drawable/roundedcorner2"
                android:fontFamily="@font/msyi"
                android:text="UPLOAD IMAGE"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                app:backgroundTint="@null" />
        </LinearLayout>

    </LinearLayout>


